---
import Sidebar from '../components/Sidebar.astro'
import Icon from '../components/Icon.svelte'
import QnA from '../components/QnA.svelte'
import monogram from '../data/monogram'
import type { Content } from '../../types/content.d';

const contents: Content[] = monogram as Content[]
---

<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>Astro</title>
</head>

<body
	class="flex w-screen min-h-screen bg-gradient-to-tl from-slate-900 to-slate-900 via-slate-800 text-violet-200 font-main antialiased text-sm">
	<div class="h-screen fixed top-0 w-12 lg:w-20">
		<Sidebar />
	</div>

	<main class="ml-12 lg:ml-20">
		<h1 class="uppercase text-center pt-10 text-xl tracking-[1rem] text-indigo-300 font-title">
			me<span class="text-fuchsia-600">„ÅÆ</span>gram
		</h1>
		<div class="pt-10 space-y-1">
			<div class="flex space-x-1 justify-center items-center text-slate-500">
				<p>Built with</p>
				<a href="https://astro.build/" target="_blank" rel="noopener noreferrer"
					class="h-6 p-1 lg:p-3 bg-slate-600 text-indigo-50 rounded-md bg-opacity-0 hover:bg-opacity-60 opacity-60 hover:opacity-100">
					<Icon icon="astro" />
				</a>
				<p class="italic">- source</p>
				<a href="https://github.com/Nostrorom/menogram-astro" target="_blank" rel="noopener noreferrer"
					class="h-6 p-1 lg:p-3 bg-slate-600 rounded-md bg-opacity-0 hover:bg-opacity-60 hover:text-indigo-100">
					<Icon icon="github" />
				</a>
			</div>
			<div class="flex space-x-1 justify-center items-center text-slate-500">
				<p>Also exists in</p>
				<a href="https://menogram-astro.vercel.app" target="_blank" rel="noopener noreferrer"
					class="h-6 p-1 lg:p-3 bg-slate-600 text-indigo-50 rounded-md bg-opacity-0 hover:bg-opacity-60 opacity-60 hover:opacity-100">
					<Icon icon="svelte" />
				</a>
				<p class="italic">- source</p>
				<a href="https://github.com/Nostrorom/menogram" target="_blank" rel="noopener noreferrer"
					class="h-6 p-1 lg:p-3 bg-slate-600 rounded-md bg-opacity-0 hover:bg-opacity-60 hover:text-indigo-100">
					<Icon icon="github" />
				</a>
			</div>
		</div>
		<div class="px-4 md:px-12 lg:px-96 mb-12">

			{contents.map((content) => (
			<QnA content={content} open={true} client:load></QnA>
			))}
		</div>
	</main>
</body>

</html>